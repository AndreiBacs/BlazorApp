@page "/fetchdata"

<PageTitle>Employees</PageTitle>

@using BlazorApp.Data
@inject EmployeeService EmployeeService

@if (employees == null)
{
  <p><em>Loading...</em></p>
}
else
{
  <table class="table">
    <thead>
      <tr style="background-color:cyan">
        <th>Name</th>
        <th>Vorname</th>
        <th>Abteilung</th>
        <th>Eintrittsdatum</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var employee in employees)
      {
        <tr @onclick="(()=> SelectItems(employee))">
          <td>@employee.LastName</td>
          <td>@employee.LastName</td>
          <td>@employee.Department</td>
          <td>@employee.EntryDate.ToString("dd.MM.yyyy")</td>
        </tr>
      }
    </tbody>
  </table>
}

@code {
  private List<Employee> employees;

  protected override async Task OnInitializedAsync()
  {
    employees = await EmployeeService.GetEmployees();
  }

  async void SelectItems(Employee employee)
  {
    await OnSelectEmployee.InvokeAsync(employee);
  }

  [Parameter] public EventCallback<Employee> OnSelectEmployee { get; set; }
}
